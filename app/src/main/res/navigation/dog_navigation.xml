<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actionListFragment"
    app:startDestination="@id/action_detailsFragment_to_listFragment">

    <fragment
        android:id="@+id/action_detailsFragment_to_listFragment"
        android:name="com.example.dogsbreeds.view.ListFragment"
        android:label="ListFragment">
        <action
            android:id="@+id/actionDetailsFragment"
            app:destination="@id/detailsFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.dogsbreeds.view.DetailsFragment"
        android:label="DetailsFragment">
        <action
            android:id="@+id/action_detailsFragment_to_listFragment"
            app:destination="@id/action_detailsFragment_to_listFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
        <argument
            android:name="dogUuid"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
</navigation>